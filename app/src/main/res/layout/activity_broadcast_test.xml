<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".broadcast.BroadcastTestActivity">
    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:textSize="20sp"
        android:text="Broadcast Test Activity"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        ></TextView>
    <Button
        android:id="@+id/register_broadcast"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:text="动态注册Broadcast"
        app:layout_constraintTop_toBottomOf="@+id/title"
        android:layout_marginTop="15dp"
        android:onClick="onClick"
        ></Button>
    <Button
        android:id="@+id/unregister_broadcast"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:text="动态解绑Broadcast"
        app:layout_constraintTop_toBottomOf="@+id/register_broadcast"
        android:layout_marginTop="15dp"
        android:onClick="onClick"
        ></Button>
    <Button
        android:id="@+id/send"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:text="发送广播"
        app:layout_constraintTop_toBottomOf="@+id/unregister_broadcast"
        android:layout_marginTop="15dp"
        android:onClick="onClick"
        ></Button>

</androidx.constraintlayout.widget.ConstraintLayout>