<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.anbang.myapplication">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".SecondActivity">
            <intent-filter>
            <action android:name="second_action"></action>
            <category android:name="second_category"></category>
            <category android:name="android.intent.category.DEFAULT"></category>
                <data
                    android:mimeType="jpeg/png"
                    android:scheme="dj"
                    android:host="www.dajia.com"
                    android:port="1000"
                    android:path="/image"
                    ></data>
            </intent-filter>
        </activity>

        <!-- 配置Service组件,同时配置一个action -->
        <service android:name=".service.TestService1">
            <intent-filter>
                <action android:name="com.anbang.myapplication.service.TEST_SERVICE1"/>
            </intent-filter>
        </service>
        <service android:name=".service.TestService2" android:exported="false">
            <intent-filter>
                <action android:name="com.anbang.myapplication.service.TEST_SERVICE2"/>
            </intent-filter>
        </service>
        <service android:name=".polling.PollingService">
            <intent-filter>
                <action android:name="com.anbang.myapplication.polling.PollingService"></action>
            </intent-filter>
        </service>
        <service android:name=".service.TestService3" android:exported="false">
            <intent-filter >
                <action android:name="com.anbang.myapplication.service.TEST_SERVICE3"/>
            </intent-filter>
        </service>
        <service android:name=".aidl.AIDLService"
            android:process=":service"
            >
            <intent-filter>
                <action android:name="android.intent.action.AIDLService" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </service>
        <activity android:name=".AIDLClientActivity"></activity>
    </application>

</manifest>